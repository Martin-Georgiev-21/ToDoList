@model IEnumerable<ToDoList_WebAppDemo.Models.User>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Users To Share Your List With</h2>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
                <tr>
                    <th>
                        First Name
                    </th>
                    <th>
                        Last Name
                    </th>
                    <th>
                        Username
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    if (obj.Id != Logged.LoggedId)
                    { 
                <tr>
                    <td width="50%">@obj.FirstName</td>
                    <td width="50%">@obj.LastName</td>
                    <td width="50%">@obj.Username</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="ToDoListManagement" asp-route-Id="@obj.Id" asp-action="ShareUserId" class="btn btn-success mx-2">
                                Share
                            </a>
                        </div>
                    </td>
                </tr>
                    }
                }
            </tbody>
        </table>
    }
</div>

