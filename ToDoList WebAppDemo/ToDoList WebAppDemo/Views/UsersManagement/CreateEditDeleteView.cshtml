@model IEnumerable<ToDoList_WebAppDemo.Models.User>


<div class="container p-3">
    <div class="row pt-4">
        <div class ="col-6">
            <h2 class="text-primary">Users List</h2>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
            {
                <table class="table table-bordered table-striped" style="width: 100%">
                    <thead>
                        <tr>
                            <th>
                                ID
                            </th>
                            <th>
                                Username
                            </th>
                            <th>
                                Password
                            </th>
                            <th>
                                Admin
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var obj in Model)
                        {
                        <tr>
                            <td width="50%">@obj.Id</td>
                            <td width="50%">@obj.Username</td>
                            <td width="50%">@obj.Password</td>
                            <td width="50%">@obj.IsAdmin</td>
                        </tr>
                        }
                    </tbody>
                </table>
            }
</div>
