@model ToDoList_WebAppDemo.Models.User

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Edit User</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="FirstName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="FirstName" class="form-control" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="LastName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="LastName" class="form-control" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Username"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Username" class="form-control" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Password"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Password" class="form-control" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="CreatorId"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="CreatorId" disabled class="form-control" />
                    </div>
                </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="DateOfCreation"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="DateOfCreation" disabled class="form-control" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="IsAdmin"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="IsAdmin" class="form-control" />
                        </div>

                    </div>
                    <div class="form-group row">
                        <div class="col-8 offset-4 row">

                            <div class="col">
                                <input type="submit" class="btn btn-info w-100" value="Update" />
                            </div>
                            <div class="col">
                                <a asp-action="CreateEditDeleteView" class="btn btn-success w-100">Back</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-4">
                    @* Keep this empty *@
                </div>
            </div>
    </div>

</form>