@model IEnumerable<ToDoList_WebAppDemo.Models.Task>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Task List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="TaskManagement" asp-action="CreateTask" class="btn btn-primary">
                Create New Task
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
                <tr>
                    <th>
                        ID
                    </th>
                    <th>
                        Title
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        List Id
                    </th>
                    <th>
                        Creator ID
                    </th>
                    <th>
                        Date of Creation
                    </th>
                    <th>
                        Editor ID
                    </th>
                    <th>
                        Date of Last Change
                    </th>
                    <th>
                        Is it Completed
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    @if (obj.ListId == TasksInfo.TaskToDoListId)
                    {
                        <tr>
                            <td width="50%">@obj.Id</td>
                            <td width="50%">@obj.Title</td>
                            <td width="50%">@obj.Description</td>
                            <td width="50%">@obj.ListId</td>
                            <td width="50%">@obj.CreatorId</td>
                            <td width="50%">@obj.DateOfCreation</td>
                            <td width="50%">@obj.IdOfTheEditor</td>
                            <td width="50%">@obj.DateOfLastChange</td>
                            <td width="50%">
                                @if (obj.IsComplete == false)
                                {
                                    <div class="w-75 btn-group" role="group">
                                        <a asp-controller="TaskManagement" asp-route-Id="@obj.Id" asp-action="IsCompleteTask" class="btn btn-dark mx-2">
                                            No
                                        </a>
                                    </div>
                                }
                                else
                                {
                                    <div class="w-75 btn-group" role="group">
                                        <a asp-controller="TaskManagement" asp-route-Id="@obj.Id" asp-action="IsCompleteTask" class="btn btn- mx-2">
                                            Yes
                                        </a>
                                    </div>
                                }
                            </td>
                            <td class="text-center">
                                <div class="w-75 btn-group" role="group">
                                    <a asp-controller="TaskManagement" asp-route-Id="@obj.Id" asp-action="EditTask" class="btn btn-primary mx-2">
                                        Edit
                                    </a>
                                    <a asp-controller="TaskManagement" asp-route-Id="@obj.Id" asp-action="DeleteTask" class="btn btn-danger mx-2">
                                        Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    }
        <div class="col-6 text-right">
            <a asp-action="ChooseListView" class="btn btn-danger">
                Back
            </a>
        </div>
</div>
